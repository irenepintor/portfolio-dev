---
import Layout from "../layouts/Layout.astro";
import Container from "../components/icons/Container.astro";
import Badge from "../components/Badge.astro";
import GitHub from "../components/icons/GitHub.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import UpWork from "../components/icons/UpWork.astro";
import Mail from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import WorkExp from "../components/icons/WorkExp.astro";
---

<Layout title="Portfolio de Irene Pintor - Web Developer" description="">
  <main>
    <Container class="py-40 pb-24">
      <h3 class="font-bold text-3xl text-teal-200 hover:text-cyan-500">Hi!</h3>
      <h1 class="text-white text-4xl font-bold flex flex-row gap-x-4 pb-4">
        My name is Irene and
        <a
          href="https://www.linkedin.com/in/irene-pintor/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center">
          <Badge>I'm open to work!</Badge>
        </a>
      </h1>
      <h2 class="text-2xl text-wrap">
        <span class="opacity-80 text-cyan-600">
          Web Developer based in Buenos Aires, Argentina.
        </span>
        <h5>
          Training as a Front End Developer focused on
          <strong>UX/UI Design</strong>.
        </h5>
      </h2>
      <nav class="flex gap-x-4 mt-8">
        <LinkedIn/>
        <GitHub/>
        <UpWork/>
        <Mail/>
      </nav>
    </Container>
    <Container id="experience">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <WorkExp class="size-7"/>
        Experience
      </h2>
      <Experience/> Soon...
    </Container>
  </main>
</Layout>